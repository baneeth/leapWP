# Flask Configuration
FLASK_APP=src/leap_ielts/web/app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///data/database/leap_ielts.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Scheduler
SCHEDULER_ENABLED=1
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=data/logs/app.log

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT=900

# Application
APP_NAME=Leap IELTS Engagement System
APP_VERSION=0.1.0
